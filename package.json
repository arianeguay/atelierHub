{
  "name": "atelierhub",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AtelierHub â€” Nx monorepo: Node GraphQL API + Angular Ops + Next.js Web",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "build": "nx run-many -t build",
    "codegen": "graphql-codegen --config codegen.ts",
    "dev": "concurrently -n api,web,ops -c cyan,magenta,yellow \"pnpm dev:api\" \"pnpm dev:web\" \"pnpm dev:ops\"",
    "dev:api": "nx serve api",
    "dev:web": "nx serve web",
    "dev:ops": "nx serve ops",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db",
    "prisma:migrate": "nx run api:prisma-migrate",
    "prisma:seed": "nx run api:prisma-seed",
    "postinstall": "node tools/postinstall.js || true"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ],
    "**/*.{tsx,jsx}": [
      "eslint --fix",
      "prettier --parser babel-ts --write"
    ],
    "**/*.{js,html,scss,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-apollo-angular": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^5.0.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@graphql-codegen/typescript-resolvers": "^5.0.0",
    "@nx/angular": "^20.8.2",
    "@nx/jest": "^20.8.2",
    "@nx/js": "^20.8.2",
    "@nx/next": "^20.8.2",
    "@nx/node": "^20.8.2",
    "@module-federation/enhanced": "^0.9.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "nx": "^20.8.2",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "typescript": "~5.5.4"
  }
}
