{
  "name": "atelierhub",
  "version": "0.1.0",
  "private": true,
  "description": "AtelierHub â€” Nx monorepo: Node GraphQL API + Angular Ops + Next.js Web",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "build": "nx run-many -t build",
    "codegen": "graphql-codegen --config codegen.ts",
    "dev": "concurrently -n api,web,ops -c cyan,magenta,yellow \"pnpm dev:api\" \"pnpm dev:web\" \"pnpm dev:ops\"",
    "dev:api": "nx serve api",
    "dev:web": "nx serve web",
    "dev:ops": "nx serve ops",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db",
    "prisma:migrate": "nx run api:prisma-migrate",
    "prisma:seed": "nx run api:prisma-seed",
    "postinstall": "node tools/postinstall.js || true"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,scss,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.3.1",
    "@graphql-codegen/typescript-resolvers": "^4.3.1",
    "@graphql-codegen/typescript-operations": "^4.4.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.1",
    "@graphql-codegen/typescript-apollo-angular": "^4.1.0",
    "@types/node": "^20.14.12",
    "@nx/node": "^20.0.0",
    "@nx/js": "^20.0.0",
    "@nx/jest": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.8",
    "nx": "^20.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.5.4"
  }
}
